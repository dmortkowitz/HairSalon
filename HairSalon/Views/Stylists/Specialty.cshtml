<h3>Here are all of @Model["stylist"].GetName()'s specialities:</h3>
<ul>
 @foreach (var specialty in @Model["specialtys"])
 {
   <li><a href='/stylists/@Model["stylist"].GetId()/specialty/@specialty.GetId()'>@specialty.GetName()</a></li>
 }
</ul>

