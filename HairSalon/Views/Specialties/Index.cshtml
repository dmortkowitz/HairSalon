<h1>All Specialties</h1>
@if (@Model.Count == 0)
{
  <h3>No specialties have been added yet!</h3>
}
@foreach (var specialty in Model)
{
  <h3><a href="/specialties/@specialty.GetId()">@specialty.GetName()</a></h3>
}
<p><form action='/specialties/new' method="get"> <button type="submit">Add a new specialty</button> | <form action='/specialties/delete' method="post"> <button type="submit">Delete All specialties</button> </p>
<p><a href="/"><button class='btn btn-danger'>Back home</button></a></p>